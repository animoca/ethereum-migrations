{
  "name": "@animoca/ethereum-migrations",
  "version": "0.1.0-rc.22",
  "description": "Base dependency and core migrations for solidity smart-contracts migrations projects",
  "keywords": [
    "animoca",
    "ethereum",
    "hardhat",
    "migrations"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:animoca/ethereum-migrations.git"
  },
  "license": "MIT",
  "author": "Animoca Brands",
  "scripts": {
    "postinstall": "for cfg in .vscode/settings.json .vscode/extensions.json .vscode/launch.json; do cp -n ${cfg}.default ${cfg} || :; done",
    "lint:js": "eslint \"**/*.{js,ts}\" --no-error-on-unmatched-pattern",
    "lint": "run-s lint:js",
    "fix:js": "eslint --fix \"**/*.{js,ts}\" --no-error-on-unmatched-pattern",
    "fix": "run-s fix:js",
    "format:js": "prettier --write \"**/*.{ts,js}\"",
    "format": "run-s format:js",
    "clean:vscode": "rm -rf .vscode/extensions.json .vscode/launch.json .vscode/settings.json",
    "clean:cache": "rm -rf cache",
    "clean:deployments": "rm -rf deployments/localhost* deployments/hardhat*",
    "clean:generated": "rm -rf generated/localhost* generated/hardhat*",
    "clean:hardhat": "rm -rf hardhat.config.last.json",
    "clean:etherscan": "rm -rf etherscan_requests",
    "clean": "run-s clean:cache clean:deployments clean:generated clean:hardhat clean:etherscan",
    "deploy": "hardhat deploy --show-stack-traces",
    "deploy:test": "NETWORK_TAGS=test yarn deploy",
    "verify-contract": "hardhat verify --show-stack-traces --write-post-data --contract-name",
    "run-all": "run-s format fix clean deploy deploy:test",
    "prepack": "run-s clean"
  },
  "devDependencies": {
    "@animoca/ethereum-contracts": "^0.3.1",
    "@animoca/ethereum-contracts-0.3.1": "npm:@animoca/ethereum-contracts@0.3.1",
    "@animoca/ethereum-contracts-bridging-0.1.1": "npm:@animoca/ethereum-contracts-bridging@0.1.1",
    "@ethersproject/hardware-wallets": "^5.7.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.3",
    "cli-progress": "^3.11.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.7.2",
    "fs-extra": "^11.1.0",
    "glob": "^8.0.3",
    "hardhat": "^2.12.4",
    "hardhat-deploy": "^0.11.22",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "lodash.clonedeep": "^4.5.0",
    "lodash.mergewith": "^4.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "yesno": "^0.4.0"
  }
}
